        <tr>
          <td width="16%"></td>
          <td>
            <ul class="portforlio_xlc1">
              <li>
              <%= select_tag 'record_employment_start_year_0', options_for_select(RecordEmployment.year), :class => "personal2_xlk1", :include_blank => true %>
              </li>
              <li>年</li>
              <li>
              <%= select_tag 'record_employment_start_month_0', options_for_select(RecordEmployment.month), :class => "personal2_xlk2", :include_blank => true %>
