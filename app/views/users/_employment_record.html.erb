          <td><%= text_field_tag :company_name, nil, :name => "record_employment_company_name_0", :class => "personal_input" %></td>
        </tr>
        <tr>
          <td><label for="user_profiles_postition"><span>*</span> 职位：</label></td>
          <td><%= text_field_tag :position, nil, :name => "record_employment_position_0", :class => "personal_input" %></td>
        </tr>
        <tr>
          <td><label for="user_profiles_post_job"><span>*</span> 担当职务：</label></td>
